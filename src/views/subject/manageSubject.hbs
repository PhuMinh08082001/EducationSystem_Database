
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
                        <h2>Subject <b>Details</b></h2>
                    </div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>
                            <!-- Example single danger button -->


                            <div class="btn-group">
                                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                   {{#if semeste}}
                                      Hoc ki : {{semeste}}                                  
                                    {{/if}}
                                </button>
                                <div class="dropdown-menu">
                                    {{#each semesters}}
                                      
                                    <a class="dropdown-item" href="#" data-value="{{this.semester}}">{{this.semester}}</a>
                                 
                                   {{/each}}
                                </div>
                                
                            </div>
                        <form action="/subject/add">
                             <button type="submit" class="btn btn-info">Add Subject</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name <i class="fa fa-sort"></i></th>
                        <th>Faculty</th>
                        <th>Num of credits <i class="fa fa-sort"></i></th>
                        <th>Semester</th>
                      
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                     {{#if_eq this.semester ../semeste}} 
                  
                    <tr>
                       
                        <td>{{this.subjectID}}</td>
                        <td>{{this.subjectName}}</td>
                        <td>{{this.facultyID}}</td>
                        <td>{{this.numOfCredits}}</td>
                        <td>{{this.semester}}</td>
                        <td>
                            <a href="#" class="view" title="View" data-toggle="tooltip"><i
                                    class="material-icons">&#xE417;</i></a>
                            <a href="/subject/edit/{{this.subjectID}}" class="edit" title="Edit" data-toggle="tooltip"><i
                                    class="material-icons">&#xE254;</i></a>
                            <a href="/subject/delete/{{this.subjectID}}" class="delete" title="Delete" data-toggle="tooltip"><i
                                    class="material-icons">&#xE872;</i></a>
                        </td>
                    </tr>
                    {{/if_eq}}
                    {{/each}}
                </tbody>
            </table>
          
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
