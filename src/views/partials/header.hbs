
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
        <div>
          
            <div>
                <img src="/images/logo.png" style="width:100px; height: 40px">
                Education App
            </div>
        </div>
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
        {{!-- <a class="p-2 text-dark" href="#">Xem khoa hoc</a> --}}
    
    </nav>

    {{#if user}}
        <div class="dropdown">
            <button style="margin-right: 10px;" type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                {{user.fullName}}
            </button>
            {{#if user.studentID}}
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/student/viewSubject"> My Class List</a>
                <a class="dropdown-item" href="/student/regisSub">Register New Course</a>
                
            </div>
            {{else if user.lecturerID}}
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/lecturer/viewClass">Manage Class</a>
          
            </div>
            {{/if}}
            {{#if_eq user.fullName 'Faculty Manager'}}
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/subject">Manage Subject</a>
            
            
            </div>
        
     
            {{else}}
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/pdt/viewSubject">View Subject List</a>
            
            </div>
            {{/if_eq}}
        </div>
        <form action='/logout' method='post'>
            <button class="btn btn-info"type='submit' name='logoutr' value='' class="sign-out-btn"> Log out <i class="fa fa-sign-out"></i></button>
        </form>
    {{else}}
    <a class="btn btn-outline-primary" href="/signup">Login</a>
    {{/if}}
</div>